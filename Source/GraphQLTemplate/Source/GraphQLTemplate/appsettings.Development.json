{
  //#if (ForwardedHeaders)
  "ForwardedHeaders": {
    //#if (HostFiltering)
    "AllowedHosts": [
      "*"
    ]
    //#endif
  },
  //#elif (HostFiltering)
  "HostFiltering": {
    "AllowedHosts": [
      "*"
    ]
  },
  //#endif
  "GraphQL": {
    "Request": {
      // Whether to include exception details in the query output.
      "IncludeExceptionDetails": true,
      // Configures Apollo tracing in the query output. OnDemand enables it when client sends the GraphQL-Tracing=1 HTTP header.
      "TracingPreference": "Always"
    }
  },
  //#if (Redis)
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  //#endif
  //#if (Serilog)
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Information"
      }
    }
  },
  //#endif
  "Kestrel": {
    "Endpoints": {
      //#if (HttpsEverywhere)
      "Https": {
        "Url": "https://*:5001",
        "Certificate": {
          // TODO
        }
      },
      //#endif
      "Http": {
        "Url": "http://*:5000"
      }
    }
  }
}
